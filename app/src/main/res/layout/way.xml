<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:id="@+id/way_option"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:layout_height="110dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_height="30dp">


    <TextView
        android:id="@+id/mode_one"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Auto"
        android:layout_marginTop="3dp"
        android:textColor="#0D1947"
        android:textSize="14dp">
    </TextView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:tint="#C8C5C5"
        android:padding="5dp">
    </ImageView>

    <TextView
        android:id="@+id/mode_two"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Bus"
        android:textAllCaps="false"
        android:layout_marginTop="3dp"
        android:textColor="#0D1947"
        android:textSize="14dp">
    </TextView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:tint="#C8C5C5"
        android:padding="5dp">
    </ImageView>
    <TextView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:id="@+id/mode_three"
        android:fontFamily="@font/montserrat"
        android:text="Auto"
        android:layout_marginTop="3dp"
        android:textColor="#0D1947"
        android:textSize="14dp">
    </TextView>


</LinearLayout>



<LinearLayout
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:layout_marginTop="50dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_icon_ionic_ios_timer"
        android:layout_marginLeft="20dp"
        android:padding="5dp">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/duration"
        android:fontFamily="@font/montserrat"
        android:text="1 hour,30 minutes"
        android:layout_marginTop="15dp"
        android:textColor="#0D1947"
        android:textSize="12dp">
    </TextView>

</LinearLayout>

<Button
    android:id="@+id/amount"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_gravity="bottom"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="220dp"
    android:layout_marginBottom="1dp"
    android:textStyle="bold"
    android:background="@drawable/ic_check_point_reached"
    android:fontFamily="@font/montserrat"
    android:text="$ 50"
    android:textColor="#FFFFFF"
    android:textSize="20dp" />



</androidx.cardview.widget.CardView>

