<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="300dp"
    android:gravity="center_horizontal"
    android:layout_marginLeft="50dp"
android:layout_height="200dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_height="30dp">


    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Home"
        android:layout_marginTop="3dp"
        android:textColor="#0D1947"
        android:textSize="14dp">
    </TextView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:tint="#C8C5C5"
        android:padding="5dp">
    </ImageView>

    <TextView
        android:layout_width="120dp"
        android:layout_marginLeft="20dp"
        android:layout_height="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Metro Station"
        android:textAllCaps="false"
        android:layout_marginTop="3dp"
        android:textColor="#0D1947"
        android:textSize="14dp">
    </TextView>



</LinearLayout>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_icon_ionic_ios_timer"
            android:layout_marginLeft="20dp"
            android:padding="5dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat"
            android:text="15 minutes"
            android:layout_marginTop="10dp"
            android:textColor="#0D1947"
            android:textSize="12dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_right"
            android:layout_marginLeft="20dp"
            android:padding="5dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Highly available"
            android:layout_marginTop="10dp"
            android:textColor="#0D1947"
            android:textSize="12dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="35dp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_traffic_icon"
            android:layout_marginLeft="20dp"
            android:padding="5dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Low congestion"
            android:layout_marginTop="10dp"
            android:textColor="#0D1947"
            android:textSize="12dp">
        </TextView>

    </LinearLayout>
</LinearLayout>
<TextView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:textSize="22dp"
    android:tint="#E1E0E0"
    android:layout_marginLeft="240dp"
    android:layout_marginTop="60dp"
    android:text="$40">

</TextView>
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginLeft="240dp"
    android:layout_marginTop="105dp"
    android:src="@drawable/ic_bus_icon"

    android:padding="5dp">
</ImageView>

<Button
    android:layout_width="130dp"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="169dp"
    android:text="SEAT BOOK"
    android:textColor="#FFFFFF"
    android:paddingLeft="30dp"
    android:background="@drawable/ic_seat_book"
    />
</androidx.cardview.widget.CardView>

