<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routes"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/ic_routes_my_location"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat"
            android:paddingLeft="5dp"
            android:text="  Your location"
            android:textAllCaps="false"
            android:textColor="#F6F7FA"
            android:textSize="18dp">


        </TextView>
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:layout_marginLeft="90dp"
               android:layout_marginTop="60dp"
               android:src="@drawable/ic_user___icon"
               app:civ_border_color="#FFFFFF"
               app:civ_border_width="5dp"
               android:tint="#FFFFFF">

           </de.hdodenhof.circleimageview.CircleImageView>

       </LinearLayout>



        <TextView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="58dp"
            android:background="@drawable/w"
           android:paddingTop="50dp"
            android:paddingLeft="20dp"
            android:text="New Delhi"
            android:textAllCaps="false"
            android:textColor="#0D1947"
            android:layout_marginTop="20dp">

        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Select your preferred transportation"
        android:textAllCaps="false"
        android:textColor="#0D1947"
        android:textSize="18dp">


    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="#FFFFFF">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/bus"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:background="@drawable/white"
                    android:layout_marginLeft="40dp">



                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/busbackground"
                        android:src="@drawable/ic_bus_icon">

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Bus"
                        android:textAllCaps="false"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="120dp"
                        android:textColor="#0D1947"
                        android:textSize="20dp">
                    </TextView>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/taxi"
                    android:clickable="true"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:background="@drawable/white"
                    android:layout_marginLeft="40dp">



                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/taxibackground"
                        android:src="@drawable/ic_taxi_icon">

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Taxi"
                        android:textAllCaps="false"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="120dp"
                        android:textColor="#0D1947"
                        android:textSize="20dp">
                    </TextView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/metro"
                    android:clickable="true"
                    android:background="@drawable/white">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/metrobackground"
                        android:padding="22dp"
                        android:src="@drawable/ic_metro_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="120dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Metro"
                        android:textAllCaps="false"
                        android:textColor="#0D1947"
                        android:textSize="20dp"></TextView>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/train"
                    android:clickable="true"
                    android:background="@drawable/white">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/rickshawbackground"
                        android:padding="5dp"
                        android:src="@drawable/ricksh"
                        android:tint="#068995">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="120dp"
                        android:fontFamily="@font/montserrat"
                        android:text="Train"
                        android:textAllCaps="false"
                        android:textColor="#0D1947"
                        android:textSize="20dp">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fl_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="0dp"
            android:background="#FFFAFA"
            app:menu="@menu/navigation"
            android:elevation="2dp"
            app:itemIconTint="#000000"
            android:layout_marginBottom="0dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|center"
                    android:background="@drawable/blue_round"
                    android:src="@drawable/ic_qr_code__icon"
                    android:tint="#FFFFFF">

                </ImageView>

            </FrameLayout>
        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </FrameLayout>


    </RelativeLayout>
</LinearLayout>